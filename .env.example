# URL da API externa para multiplayer e outras funcionalidades
# Substitua pela URL do seu backend hospedado (Railway, Render, etc.)
NEXT_PUBLIC_API_URL=https://ludomusic-api.railway.app

# Configurações opcionais
NEXT_PUBLIC_ENABLE_MULTIPLAYER=true
NEXT_PUBLIC_ENABLE_MUSIC_INFO=true

# Configurações para envio de emails (relatórios de erro)
# Escolha UMA das opções abaixo:

# Opção 1: SendGrid (Recomendado)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@ludomusic.xyz

# Opção 2: Gmail (Alternativa)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASS=your_app_password_here

# Opção 3: Vercel Email (Se disponível)
VERCEL_EMAIL_API_KEY=your_vercel_email_key_here
