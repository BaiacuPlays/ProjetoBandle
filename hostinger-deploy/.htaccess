# Configurações para servir arquivos de áudio corretamente
<IfModule mod_mime.c>
    AddType audio/mpeg .mp3
    AddType audio/wav .wav
    AddType audio/ogg .ogg
    AddType audio/mp4 .m4a
</IfModule>

# Habilitar CORS para arquivos de áudio
<IfModule mod_headers.c>
    <FilesMatch "\.(mp3|wav|ogg|m4a)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type"
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Configurações de cache
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType audio/mpeg "access plus 1 year"
    ExpiresByType audio/mp3 "access plus 1 year"
    ExpiresByType audio/wav "access plus 1 year"
    ExpiresByType audio/ogg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
</IfModule>

# Permitir acesso aos arquivos de áudio
<Files "*.mp3">
    Order allow,deny
    Allow from all
</Files>

# Configurações para Next.js export
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
